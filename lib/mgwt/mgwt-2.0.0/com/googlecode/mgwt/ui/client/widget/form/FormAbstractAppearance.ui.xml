<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget">
	<ui:with field="appearance" type="com.googlecode.mgwt.ui.client.widget.form.FormAppearance"></ui:with>
	<g:FlowPanel>
	  <g:FlowPanel ui:field="headerContainer" visible="false" styleName="{appearance.css.formHeader}" />
	  <g:FlowPanel ui:field="container" styleName="{appearance.css.form}" />
	</g:FlowPanel>
</ui:UiBinder> 
