<module>
  <replace-with class="com.googlecode.mgwt.ui.client.theme.platform.buttonbar.ButtonBarIOSAppearance">
    <when-type-is class="com.googlecode.mgwt.ui.client.widget.buttonbar.ButtonBarAppearance" />
    <when-property-is name="mgwt.os" value="ios" />
  </replace-with>

  <replace-with class="com.googlecode.mgwt.ui.client.theme.platform.buttonbar.ButtonBarAndroidAppearance">
    <when-type-is class="com.googlecode.mgwt.ui.client.widget.buttonbar.ButtonBarAppearance" />
    <when-property-is name="mgwt.os" value="android" />
  </replace-with>
</module>